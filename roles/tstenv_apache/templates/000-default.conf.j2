        Order allow,deny
        Deny from all   
    </Files>

    <Files ~ "\.sql">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.sh">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.pl">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.zip">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.gz">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "\.tar">
        Order allow,deny
        Deny from all   
    </Files>
    <Files ~ "~">
        Order allow,deny
        Deny from all   
    </Files>

